@model mvc.Models.Tipuri_Cafea

@{
    ViewData["Title"] = "Delete Tipuri Cafea";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />

<section class="bodyController">
    <h1>Delete Tipuri Cafea</h1>

    <div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nume</th>
                <th>Pret</th>
                <th>Rating</th>
                <th>Poza</th>
            </tr>
            <tr>
                <td>@Model.id</td>
                <td>@Model.Nume</td>
                <td>@Model.Pret</td>
                <td>@Model.Rating</td>
                <td>
                    @if (!string.IsNullOrEmpty(Model.Poza))
                    {
                        <a href="@Model.Poza" target="_blank">@Html.DisplayFor(model => Model.Poza)</a>
                    }
                    @if (string.IsNullOrEmpty(Model.Poza))
                    {
                        <span>No document uploaded</span>
                    }
                </td>
            </tr>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</section>
