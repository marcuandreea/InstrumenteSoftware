@model IEnumerable<mvc.Models.Abonament>

@{
    ViewData["Title"] = "Subscriptions";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />

<section class="bodyController">
<h1>Subscriptions</h1>

<table class="table">
    <thead>
        <tr>
            <th>Subscription ID</th>
            <th>Subscription Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var subscription in Model)
        {
            <tr>
                <td>@subscription.id</td>
                <td>@subscription.Tip_Abonament</td>
                <td>
                    <a asp-action="Details" asp-route-id="@subscription.id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@subscription.id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@subscription.id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New Subscription</a>
</section>