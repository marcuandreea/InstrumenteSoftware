@model mvc.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />

<section class="bodyController">
    <h1>Delete Review</h1>

    <div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>UserID</th>
                <th>Nota</th>
                <th>Review</th>
            </tr>
            <tr>
                <td>@Model.id</td>
                <td>@Model.userID</td>
                <td>@Model.nota</td>
                <td>@Model.review</td>
            </tr>
        </table>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</section>
