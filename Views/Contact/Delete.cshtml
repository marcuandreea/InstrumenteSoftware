@model mvc.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />

<section class="bodyController">
<h1>Delete Contact</h1>

<div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Message</th>
                <th>Time Sent</th>
                <th>User ID</th>
            </tr>
            <tr>
                <td>@Model.id</td>
                <td>@Model.message</td>
                <td>@Model.timeSent</td>
                <td>@Model.userID</td>
            </tr>
        </table>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
</section>