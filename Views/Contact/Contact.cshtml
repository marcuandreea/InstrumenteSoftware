@model mvc.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Contact";
}

<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Home - Coffee Shop</title>
    <link rel="icon" href="~/img/logo2.png" type="image/x-icon">
</head>
<body>
    <section class="contact" id="contact">

        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d11414.986340386986!2d23.76677631600887!3d44.335712137243405!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4752d9d90ad95aaf%3A0x9325df3dfec4371b!2zQ3JhaW92acibYSBOb3XEgywgQ3JhaW92YQ!5e0!3m2!1sro!2sro!4v1741645351631!5m2!1sro!2sro" width="650" height="550" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

        <div class="row">

            <form asp-controller="Contact" asp-action="SubmitContact" method="post">
                @Html.AntiForgeryToken()
                <h3>get in touch</h3>
                <div class="inputBox">
                    <span class="fas fa-envelope"></span>
                    <input asp-for="message" class="form-control" placeholder="Mesajul tau" />
                    <span asp-validation-for="message" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="timeSent" value ="@DateTime.Now"/>
                <input type="submit" value="Contact now" class="btn" />
            </form>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn" asp-action ="Index">Lista mesaje</a>
            }


        </div>

    </section>

</body>
</html>
