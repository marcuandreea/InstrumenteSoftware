@model mvc.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<section class="bodyController">
<h1>Contact Details</h1>

<div>
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Message</th>
                <th>Time Sent</th>
                <th>User ID</th>
            </tr>
            <tr>
                <td>@Model.id</td>
                <td>@Model.message</td>
                <td>@Model.timeSent</td>
                <td>@Model.userID</td>
            </tr>
        </table>
</div>

<a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</section>