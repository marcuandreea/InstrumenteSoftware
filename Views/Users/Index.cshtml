@model IEnumerable<mvc.Models.Users>

@{
    ViewData["Title"] = "Users";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />
<section class="bodyController">
<h1>Users</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
					@Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tip_utilizator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
			<th>
				@Html.DisplayNameFor(model => model.ID_abonament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.photoPath)
            </th>
		    <th>
                 Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
						@Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tip_utilizator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
					<td>
						@Html.DisplayFor(modelItem => item.ID_abonament)
					</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.photoPath))
                        {
                            <a href="@item.photoPath" target="_blank">@Html.DisplayFor(modelItem => item.photoPath)</a>
                        }
                        @if (string.IsNullOrEmpty(item.photoPath))
                        {
                            <span>No document uploaded</span>
                        }
                    </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</section>