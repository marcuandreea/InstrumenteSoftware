@model mvc.Models.Users

@{
    ViewData["Title"] = "Create User";
}

<link rel="stylesheet" href="~/css/default2.css" asp-append-version="true" />

<section class="bodyController">
    <h1>Create User</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div>
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <input asp-for="PasswordHash" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Tip_utilizator" class="control-label"></label>
                    <select asp-for="Tip_utilizator" class="form-control">
                        <option value="Vizitator">Vizitator</option>
                        <option value="Abonat">Abonat</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Tip_utilizator" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ID_abonament" class="control-label"></label>
                    <input asp-for="ID_abonament" class="form-control" />
                    <span asp-validation-for="ID_abonament" class="text-danger"></span>
                </div>
                <div>
                    <label for="photoPathFile" class="control-label">Upload Document</label>
                    <input type="file" name="photoPathFile" id="photoPathFile" class="form-control" />
                    <span class="text-danger">@ViewData["FileUploadError"]</span>
                </div>
                <div class="centerDiv">
                    <input type="submit" value="Create" class="btn" />
                </div>
            </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</section>
